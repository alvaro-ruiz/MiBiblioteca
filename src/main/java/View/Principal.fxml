                                                <Label fx:id="pageCountLabel" text="No disponible" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                                                <Label fx:id="isbnLabel" text="No disponible" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                                             </children>
                                          </GridPane>
                                          
                                          <!-- Estado del libro -->
                                          <VBox spacing="10.0">
                                             <children>
                                                <Label styleClass="section-title" text="Estado del libro">
                                                   <font>
                                                      <Font name="System Bold" size="16.0" />
                                                   </font>
                                                </Label>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                   <children>
                                                      <Label text="Estado:" />
                                                      <ComboBox fx:id="estadoComboBox" prefWidth="200.0" />
                                                      <Button fx:id="guardarEstadoButton" mnemonicParsing="false" onAction="#handleGuardarEstado" styleClass="primary-button" text="Guardar estado" />
                                                   </children>
                                                </HBox>
                                             </children>
                                          </VBox>
                                          
                                          <!-- Sección para libros leídos -->
                                          <VBox fx:id="seccionLeido" spacing="10.0" visible="false">
                                             <children>
                                                <Separator />
                                                <Label styleClass="section-title" text="Información de lectura">
                                                   <font>
                                                      <Font name="System Bold" size="16.0" />
                                                   </font>
                                                </Label>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                   <children>
                                                      <Label text="Fecha de lectura:" />
                                                      <DatePicker fx:id="fechaLecturaPicker" />
                                                   </children>
                                                </HBox>
                                                <VBox spacing="5.0">
                                                   <children>
                                                      <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                         <children>
                                                            <Label text="Valoración:" />
                                                            <Label fx:id="valoracionLabel" text="5.0" />
                                                         </children>
                                                      </HBox>
                                                      <Slider fx:id="valoracionSlider" blockIncrement="1.0" majorTickUnit="1.0" max="10.0" min="0.0" minorTickCount="0" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="5.0" />
                                                   </children>
                                                </VBox>
                                                <VBox spacing="5.0">
                                                   <children>
                                                      <Label text="Comentario personal:" />
                                                      <TextArea fx:id="comentarioTextArea" prefHeight="100.0" wrapText="true" />
                                                   </children>
                                                </VBox>
                                                <Button fx:id="guardarLecturaButton" mnemonicParsing="false" onAction="#handleGuardarLectura" styleClass="primary-button" text="Guardar información de lectura" />
                                             </children>
                                          </VBox>
                                          
                                          <!-- Sección para libros prestados -->
                                          <VBox fx:id="seccionPrestado" spacing="10.0" visible="false">
                                             <children>
                                                <Separator />
                                                <Label styleClass="section-title" text="Información de préstamo">
                                                   <font>
                                                      <Font name="System Bold" size="16.0" />
                                                   </font>
                                                </Label>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                   <children>
                                                      <Label text="Prestado a:" />
                                                      <TextField fx:id="prestadoATextField" HBox.hgrow="ALWAYS" />
                                                   </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                   <children>
                                                      <Label text="Fecha de préstamo:" />
                                                      <DatePicker fx:id="fechaPrestamoDatePicker" />
                                                   </children>
                                                </HBox>
                                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                                   <children>
                                                      <Label text="Devuelto:" />
                                                      <ComboBox fx:id="devueltoComboBox" prefWidth="150.0" />
                                                   </children>
                                                </HBox>
                                                <Button fx:id="guardarPrestamoButton" mnemonicParsing="false" onAction="#handleGuardarPrestamo" styleClass="primary-button" text="Guardar información de préstamo" />
                                             </children>
                                          </VBox>
                                       </children>
                                    </VBox>
                                 </children>
                              </HBox>
                              
                              <!-- Sección de Descripción -->
                              <VBox spacing="5.0">
                                 <children>
                                    <Label styleClass="section-title" text="Descripción">
                                       <font>
                                          <Font name="System Bold" size="18.0" />
                                       </font>
                                    </Label>
                                    <TextArea fx:id="descriptionTextArea" prefHeight="250.0" wrapText="true" editable="false" styleClass="description-text-area" />
                                 </children>
                                 <VBox.margin>
                                    <Insets top="0.0" />
                                 </VBox.margin>
                              </VBox>
                              
                              <!-- Sección de Opiniones -->
                              <VBox fx:id="opinionesContainer" spacing="10.0">
                                 <children>
                                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                                       <children>
                                          <Label styleClass="section-title" text="Opiniones de lectores">
                                             <font>
                                                <Font name="System Bold" size="18.0" />
                                             </font>
                                          </Label>
                                          <Button fx:id="btnAgregarOpinion" mnemonicParsing="false" onAction="#handleAgregarOpinion" styleClass="primary-button" text="Añadir mi opinión" />
                                       </children>
                                    </HBox>
                                    <VBox fx:id="opinionesList" spacing="10.0" styleClass="opiniones-list">
                                       <!-- Las opiniones se cargarán dinámicamente aquí -->
                                       <children>
                                          <Label fx:id="noOpinionesLabel" text="No hay opiniones disponibles para este libro." />
                                       </children>
                                    </VBox>
                                    <Button fx:id="btnVerMasOpiniones" mnemonicParsing="false" onAction="#handleVerOpiniones" text="Ver todas las opiniones" />
                                 </children>
                                 <padding>
                                    <Insets top="10.0" />
                                 </padding>
                              </VBox>
                              
                              <!-- Sección de Recomendaciones -->
                              <VBox fx:id="recomendacionesContainer" spacing="10.0">
                                 <children>
                                    <Label styleClass="section-title" text="Libros similares que te pueden interesar">
                                       <font>
                                          <Font name="System Bold" size="18.0" />
                                       </font>
                                    </Label>
                                    <HBox fx:id="recomendacionesHBox" spacing="15.0" alignment="CENTER_LEFT">
                                       <!-- Las recomendaciones se cargarán dinámicamente aquí -->
                                       <children>
                                          <ProgressIndicator fx:id="recomendacionesProgress" visible="true" />
                                          <Label fx:id="noRecomendacionesLabel" text="Cargando recomendaciones..." />
                                       </children>
                                    </HBox>
                                    <Button fx:id="btnVerMasRecomendaciones" mnemonicParsing="false" onAction="#handleVerMasRecomendaciones" text="Ver más recomendaciones" />
                                 </children>
                                 <padding>
                                    <Insets top="10.0" bottom="20.0" />
                                 </padding>
                              </VBox>
                           </children>
                           <padding>
                              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                           </padding>
                        </VBox>
                     </content>
                  </ScrollPane>
               </center>
               <bottom>
                  <HBox alignment="CENTER" BorderPane.alignment="CENTER">
                     <children>
                        <Label fx:id="statusLabelDetails" textFill="#757575">
                           <font>
                              <Font size="14.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </HBox>
               </bottom>
            </BorderPane>
            
            <!-- Indicador de progreso -->
            <ProgressIndicator fx:id="searchProgressIndicator" maxHeight="80.0" maxWidth="80.0" visible="false" />
         </children>
      </StackPane>
   </center>
</BorderPane>
